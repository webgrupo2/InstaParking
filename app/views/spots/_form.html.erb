        <option value="<%= district.id %>">
          <%= district.name.to_s %>
        </option>
      <% end %>
    </select>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address%>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description%>
  </div>
  <div class="field">
    <%= f.label :cost %><br>
    <%= f.text_field :cost %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
